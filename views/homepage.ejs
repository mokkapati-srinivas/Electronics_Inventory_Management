 <!-- Content Wrapper. Contains page content -->
 <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Electronics Inventory Management</h1>
    </section>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
        <div class="card">
            <div class="card-header">
              <h3 class="card-title">Stock Details</h3>
        
              <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                  <i class="fas fa-minus"></i></button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                  <i class="fas fa-times"></i></button>
              </div>
            </div>
            <div class="card-body table-responsive p-0" style="height: 400px;">
              <table class="table table-striped table-head-fixed text-nowrap">
              <thead>
                <tr>
                  <th style="width: 10%" >Product ID</th>
                  <th style="width: 10%" >Product Name</th>
                  <th style="width: 10%" >Product Category</th>
                  <th style="width: 15%" >Stock Available</th>
                  <th style="width: 10%" >Cost Price</th>
                  <th style="width: 10%" >Selling price</th>
                  <th style="width: 20%" > </th>
                </tr>
              </thead>
              <tbody>
                <% for(var i=0;i<data.length;++i) { %>
                <tr>
                <td><%= data[i].productID %></td>
                <td><%= data[i].name %></td>
                <td><%= data[i].category %></td>
                <td>
                    <% if(data[i].stockAvailable>=100) { %>
                    <div class="progress progress-xs">
                        <div class="progress-bar bg-success" style="width: 100%"></div>
                    </div>
                    <small><%= data[i].stockAvailable %></small>
                    <% } %>
                  <% if(data[i].stockAvailable>=75 && data[i].stockAvailable<100) { %>
                  <div class="progress progress-xs">
                    <div class="progress-bar bg-success" style="width: 75%"></div>
                  </div>
                  <small><%= data[i].stockAvailable %></small>
                  <% } %>
                  <% if(data[i].stockAvailable>=50 && data[i].stockAvailable<75) { %>
                    <div class="progress progress-xs">
                      <div class="progress-bar bg-warning" style="width: 50%"></div>
                    </div>
                    <small><%= data[i].stockAvailable %></small>
                  <% } %>
                  <% if(data[i].stockAvailable<50) { %>
                    <div class="progress progress-xs">
                      <div class="progress-bar bg-danger" style="width: 20%"></div>
                    </div>
                    <small><%= data[i].stockAvailable %></small>
                  <% } %>
                </td>
                <td><%= data[i].costPrice %></td>
                <td><%= data[i].sellingPrice %></td>
                <td class="project-actions text-right">
                  <a class="btn btn-info btn-sm" href="/updateData?pID=<%= data[i].productID %>"><i class="fas fa-pencil-alt"></i> Edit</a>
                  <a class="btn btn-danger btn-sm" href="/deleteData?pID=<%= data[i].productID %>" ><i class="fas fa-trash"></i> Delete</a>
                </td>
                </tr>
                <% } %>
              </tbody>
              </table>
              </div>
        </div>
    </section>

    <section class="content">
      <a class="btn btn-block btn-info" style="width: fit-content" href="/addData"><i class="nav-icon far fa-plus-square"></i> Add New Product</a>
    </section>
